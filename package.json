{
  "name": "getup",
  "version": "0.5.0",
  "description": "Frontend boilerplate",
  "author": "Genki Katsutani",
  "config": {
    "distDir": "dist"
  },
  "scripts": {
    "css-sass": "node-sass --output ${npm_package_config_distDir}/css --output-style expanded --source-map true --source-map-contents true --include-path src/css --precision 6 'src/scss'",
    "css-postcss": "postcss --config postcss.config.js --replace ${npm_package_config_distDir}/css/**/*.css",
    "css": "npm-run-all css-sass css-postcss",
    "html": "ejs-cli --base-dir src/ejs '*.ejs' --out ${npm_package_config_distDir}/",
    "watch-js": "onchange src/js -- yarn run webpack",
    "watch-scss": "onchange src/scss -- yarn run css",
    "watch-html": "onchange src/ejs -- yarn run html",
    "watch-sketch": "onchange src/symbol-font-14px.sketch -- gulp sketch",
    "watch-iconfont": "onchange src/iconfont -- gulp iconfont",
    "watch": "npm-run-all --parallel watch-*",
    "min-css": "postcss ${npm_package_config_distDir}/css/main.css -e minify -o ${npm_package_config_distDir}/css/main.css",
    "min-image": "imagemin ${npm_package_config_distDir}/img/*.{jpg,png} --out-dir=${npm_package_config_distDir}/img",
    "min": "npm-run-all --parallel min-image",
    "copy-font": "cpx \"node_modules/slick-carousel/slick/fonts/**\" ${npm_package_config_distDir}/css/fonts",
    "copy-img": "cpx \"node_modules/slick-carousel/slick/ajax-loader.gif\" ${npm_package_config_distDir}/css",
    "copy-bootstrap": "cpx \"node_modules/bootstrap/scss/**/_*\" src/scss",
    "copy-gulp": "gulp copy",
    "copy": "npm-run-all copy-*",
    "webpack": "webpack --display-error-details"
  },
  "dependencies": {
    "animejs": "^2.0.2",
    "bootstrap": "4.0.0-beta",
    "feature.js": "^1.0.0",
    "flexibility": "^2.0.1",
    "jquery": "^3.2.1",
    "mobile-detect": "^1.3.6",
    "p5": "^0.5.14",
    "popper.js": "^1.12.5",
    "promise-polyfill": "^6.0.2",
    "sanitize.css": "^5.0.0",
    "scrollmagic": "^2.0.5",
    "slick-carousel": "^1.7.1",
    "vue": "^2.4.4",
    "whatwg-fetch": "^2.0.3"
  },
  "directories": {
    "doc": "docs"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/nibushibu/Getup.git"
  },
  "bugs": {
    "url": "https://github.com/nibushibu/Getup/issues"
  },
  "homepage": "https://github.com/nibushibu/Getup",
  "license": "MIT",
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.0",
    "buble": "^0.16.0",
    "cpx": "^1.5.0",
    "css-mqpacker": "^6.0.0",
    "cssnano": "^3.10.0",
    "eslint": "^4.0.0",
    "gulp": "^3.9.1",
    "gulp-consolidate": "^0.2.0",
    "gulp-iconfont": "^9.0.0",
    "gulp-load-plugins": "^1.5.0",
    "gulp-plumber": "^1.1.0",
    "gulp-rename": "^1.2.2",
    "gulp-sketch": "^1.0.4",
    "lodash": "^4.17.4",
    "node-sass": "^4.5.3",
    "onchange": "^3.2.1",
    "perfectionist": "^2.4.0",
    "postcss-cssnext": "^3.0.2",
    "postcss-easings": "^1.0.0",
    "postcss-flexibility": "^2.0.0",
    "postcss-focus": "^2.0.0",
    "postcss-style-guide": "^0.14.0",
    "require-dir": "^0.3.1",
    "rollup": "^0.50.0",
    "run-sequence": "^2.1.0",
    "sass-loader": "^6.0.6",
    "vue-loader": "^13.0.5",
    "vue-template-compiler": "^2.4.4",
    "webpack": "^3.6.0"
  }
}
